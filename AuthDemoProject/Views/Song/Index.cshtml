@model List<AuthDemoProject.Models.Song>

<h1>Songs</h1>

<p><a asp-controller="Song" asp-action="Add">Add a Song</a></p>
<p><a asp-controller="Song" asp-action="Delete">Delete a Song</a></p>

@if (Model.Count == 0)
{
<p>No songs yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>Song Name</th>
        <th>Artist Name</th>
        <th>Genre</th>
    </tr>
    @foreach (Song song in Model)
    {
        <tr>
            <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@song.Id">@song.Name</a></td>
            <td>@song.Artist.Name</td>
            <td>@song.Genre</td>
        </tr>
    }
</table>
}
