@model AuthDemoProject.ViewModels.AddSongViewModel

<h1>Add New Song</h1>


<form asp-controller="Song" asp-action="ProcessAddSongForm" method="post">

    <div class="form-group">
        <label asp-for="Name">Song Name</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Artist">Artist Name</label>
        <input class="form-control" asp-for="Artist" />
        <span asp-validation-for="Artist"></span>
    </div>

    <div class="form-group">
        <label>Genre</label>
        <input class="form-control" />
    </div>

    <input type="submit" value="Add Song" />

</form>