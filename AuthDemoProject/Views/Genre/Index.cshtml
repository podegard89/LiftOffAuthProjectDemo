@model List<AuthDemoProject.Models.Genre>


<h1>Genres</h1>


<p><a asp-controller="Genre" asp-action="Add">Add a Genre</a></p>
<p><a asp-controller="Genre" asp-action="Delete">Delete a Genre</a></p>



@if (Model.Count == 0)

{

    <p>No genres are currently listed!</p>

}

else

{

    <div>

        <ul>

            @foreach (Genre genre in Model)

            {

                <li>

                    <a asp-controller="Genre" asp-action="About" asp-route-id="@genre.Id">@genre.Name</a>

                </li>

            }

        </ul>

    </div>

}


