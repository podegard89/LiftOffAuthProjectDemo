
<h1>Delete Genre</h1>

<form method="post">
    @foreach (var genre in ViewBag.genres)
    {
        <div class="form-group">
            <label>
                <span>@genre.Name</span>
                <input type="checkbox" name="genreIds" value="@genre.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Genres" class="btn btn-danger">

</form>
