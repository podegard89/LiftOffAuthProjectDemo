@model AuthDemoProject.ViewModels.AddArtistViewModel

<h1>Add New Artist</h1>

<form asp-controller="Artist" asp-action="ProcessAddArtistForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Artist Name</label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Genre">Artist Genre</label>
        <input class="form-control" asp-for="Genre"/>
        <span asp-validation-for="Genre"></span>
    </div>
    <input type="submit" value="Submit" />
</form>

