@model List<AuthDemoProject.Models.Artist>

<h1>Artist</h1>

<p><a asp-controller="Artist" asp-action="Add">Add an Artist</a></p>
<p><a asp-controller="Artist" asp-action="Delete">Delete an Artist</a></p>

@if (Model.Count == 0)
{
        <p>No artists available</p>
}
else
{
        <div>
            <ul>
                @foreach (Artist artist in Model)
                {
                        <li>
                            <a asp-controller="Artist" asp-action="About" asp-route-id="@artist.Id">@artist.Name</a>
                        </li>
                } 
            </ul>
        </div>
}




